<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF00	"
    tools:context=".antigua5">


    tools:context=".PrimerFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"

                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. El Mausoleo de Halicarnaso: "
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:src="@drawable/antigua5" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="392dp"
                    android:text="Fue un monumento funerario destinado a Mausolo (un gobernante sátrapa del Imperio Persa), que fue erigido en torno al año 350 a. C en Helicarnaso, la actual localidad de Bodrum en Turquía. De ahí la connotación de la palabra mausoleo actual. Fue una construcción de una estética hermosa, medía 46 m de altura y tenía relieves escultóricos impresionantes, que fueron creados por varios escultores griegos de la época. Soportó la invasión de Alejandro Magno, de los bárbaros o los árabes, pero no resistió la fuerza de la naturaleza, que lo derribó con un terremoto en el año 1.404. Se han salvado algunas partes del mausoleo, que se pueden visitar en el Museo Británico en Londres." />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/mapamoderna1"
                        android:layout_width="348dp"
                        android:layout_height="wrap_content"
                        android:text="Toast (latitud , longitud) " />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="Atras" />
</FrameLayout>